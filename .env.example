# ===========================================
# Laravel PaaS Environment Configuration
# ===========================================

# Application
APP_ENV=production
APP_DEBUG=false

# ===========================================
# Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=change_this_secure_password
MYSQL_DATABASE=paas
MYSQL_USER=paas
MYSQL_PASSWORD=change_this_password

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=change_this_to_random_64_char_string
JWT_EXPIRY_HOURS=24

# ===========================================
# Domain Configuration
# ===========================================
# Base domain for student subdomains
# e.g., student projects will be: project-abc.example.com
BASE_DOMAIN=localhost

# Admin email for Let's Encrypt SSL
ACME_EMAIL=admin@example.com

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Resource Limits (Defaults)
# ===========================================
DEFAULT_CPU_LIMIT=0.5
DEFAULT_MEMORY_LIMIT=512m
DEFAULT_MAX_PROJECTS=3
DEFAULT_EXPIRY_DAYS=30
