# Laravel PaaS - Docker Ignore File
# This file excludes unnecessary files from Docker build context

# Version control
.git
.gitignore
.gitattributes

# Documentation
README.md
*.md
docs/

# Development files
.env.example
.env.local
.env.testing
phpunit.xml
phpstan.neon
.phpcs.xml

# IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Node modules (handled in multi-stage build)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Testing
tests/
coverage/
.phpunit.result.cache

# Build artifacts
/build/
/dist/
public/hot
public/storage
storage/app/public

# Cache and logs (created at runtime)
storage/logs/*
!storage/logs/.gitkeep
storage/framework/cache/*
!storage/framework/cache/.gitkeep
storage/framework/sessions/*
!storage/framework/sessions/.gitkeep
storage/framework/views/*
!storage/framework/views/.gitkeep
bootstrap/cache/*
!bootstrap/cache/.gitkeep

# Docker files themselves
Dockerfile
Dockerfile.*
docker-compose*.yml
.dockerignore

# Development tools
.sail/
sail
vendor/bin/sail

# Deployment scripts
deploy.sh
deploy/
scripts/
