[Unit]
Description=Laravel PaaS Nginx Webhook
After=network.target nginx.service

[Service]
Type=simple
User=root
Environment="WEBHOOK_SECRET=your-secret-key-here"
Environment="BASE_DOMAIN=smkmuh1bantul.sch.id"
Environment="ACME_EMAIL=admin@smkmuh1bantul.sch.id"
Environment="WEBHOOK_PORT=5000"
ExecStart=/opt/nginx-webhook/webhook.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
